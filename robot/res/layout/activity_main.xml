                        android:text="@string/b_j2_minus" />

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:onClick="b2"
                        android:text="@string/b_j2" />

                    <Button
                        android:id="@+id/b2_plus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b2_plus"
                        android:text="@string/b_j2_plus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_j3_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b3_minus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b3_minus"
                        android:text="@string/b_j3_minus" />

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
