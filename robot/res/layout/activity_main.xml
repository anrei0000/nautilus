        <LinearLayout
            android:id="@+id/l_center_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/b_f1_disp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_f1_disp"
                android:text="@string/b_f1_disp" />

            <Button
                android:id="@+id/b_f2_disp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_f2_disp"
                android:text="@string/b_f2_disp" />

            <Button
                android:id="@+id/b_f3_disp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
