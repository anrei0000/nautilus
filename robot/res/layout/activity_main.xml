        <LinearLayout
            android:id="@+id/l_mid_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/b_disp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_disp"
                android:text="@string/b_disp" />

            <Button
                android:id="@+id/b_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_robot"
                android:text="@string/b_robot" />

            <Button
                android:id="@+id/b_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_edit"
                android:text="@string/b_edit" />

            <Button
                android:id="@+id/b_clr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_clr"
                android:text="@string/b_clr" />

            <Button
                android:id="@+id/b_cmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
