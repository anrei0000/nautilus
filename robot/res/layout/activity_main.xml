                    <Button
                        android:id="@+id/b6"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:onClick="b6"
                        android:text="@string/b_j6" />

                    <Button
                        android:id="@+id/b6_plus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b6_plus"
                        android:text="@string/b_j6_plus" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/mode_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false" >

                    <RadioButton
                        android:id="@+id/mode_radio0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:clickable="false"
                        android:text="@string/radio0" />

                    <RadioButton
                        android:id="@+id/mode_radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:clickable="false"
                        android:text="@string/radio1" />

                    <RadioButton
                        android:id="@+id/mode_radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:clickable="false"
                        android:text="@string/radio2" />

                    <RadioButton
                        android:id="@+id/mode_radio3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:clickable="false"
                        android:text="@string/radio3" />

                    <RadioButton
                        android:id="@+id/mode_radio4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:clickable="false"
                        android:text="@string/radio4" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b_slow"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:onClick="b_slow"
                        android:text="@string/b_slow" />

                    <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_width="700dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:onClick="b_speed_bar" />

                    <Button
                        android:id="@+id/b_speed"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:onClick="b_speed"
                        android:text="@string/b_speed" />
                </LinearLayout>
            </LinearLayout>
