<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/l_wrap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/l_top_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/displayEnvironment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"    
                android:enabled="false"            
                android:text="@string/environment_name" >
            </EditText>
            
            <EditText
                android:id="@+id/displayIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number|text"
                android:selectAllOnFocus="true"
                android:text="@string/environment_ip" >
            </EditText>

            <EditText
                android:id="@+id/displayPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:selectAllOnFocus="true"
                android:text="@string/environment_password" >
            </EditText>

            <Button
                android:id="@+id/b_connect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="b_connect"
                android:text="@string/environment_connect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/b_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_mode"
                android:text="@string/b_mode" />

            <Button
                android:id="@+id/b_rec"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_rec"
                android:text="@string/b_rec" />

            <ToggleButton
                android:id="@+id/b_on_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_on_off"
                android:text="@string/b_on_off" />

            <Button
                android:id="@+id/b_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_stop"
                android:text="@string/b_stop" />

            <Button
                android:id="@+id/b_comp_pwr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_comp_pwr"
                android:text="@string/b_comp_pwr" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_center_top_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/display"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_center_top_soft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editSoft0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editSoft1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editSoft2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editSoft3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editSoft4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editSoft5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editSoft6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_center_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/b_soft0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_soft0"
                android:text="@string/b_soft0" />

            <Button
                android:id="@+id/b_soft1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_soft1"
                android:text="@string/b_soft1" />

            <Button
                android:id="@+id/b_soft2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_soft2"
                android:text="@string/b_soft2" />

            <Button
                android:id="@+id/b_soft3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_soft3"
                android:text="@string/b_soft3" />

            <Button
                android:id="@+id/b_soft4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_soft4"
                android:text="@string/b_soft4" />

            <Button
                android:id="@+id/b_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_no"
                android:text="@string/b_no" />

            <Button
                android:id="@+id/b_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_yes"
                android:text="@string/b_yes" />
        </LinearLayout>

        <LinearLayout
