                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_j4_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b4_minus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b4_minus"
                        android:text="@string/b_j4_minus" />

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:onClick="b4"
                        android:text="@string/b_j4" />

                    <Button
                        android:id="@+id/b4_plus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b4_plus"
                        android:text="@string/b_j4_plus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_j5_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b5_minus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b5_minus"
                        android:text="@string/b_j5_minus" />

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:onClick="b5"
                        android:text="@string/b_j5" />

                    <Button
                        android:id="@+id/b5_plus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b5_plus"
                        android:text="@string/b_j5_plus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_j6_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b6_minus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b6_minus"
