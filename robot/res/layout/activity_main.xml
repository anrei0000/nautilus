                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b1_minus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b1_minus"
                        android:text="@string/b_j1_minus" />

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:onClick="b1"
                        android:text="@string/b_j1" />

                    <Button
                        android:id="@+id/b1_plus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:onClick="b1_plus"
                        android:text="@string/b_j1_plus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l_j2_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.98"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/b2_minus"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
