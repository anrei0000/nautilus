            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:id="@+id/l_mid_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
