            android:id="@+id/l_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <Button
                android:id="@+id/b_f1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_f1"
                android:text="@string/b_f1" />

            <Button
                android:id="@+id/b_f2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_f2"
                android:text="@string/b_f2" />

            <Button
                android:id="@+id/b_f3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_f3"
                android:text="@string/b_f3" />

            <Button
                android:id="@+id/b_f4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_f4"
                android:text="@string/b_f4" />

            <Button
                android:id="@+id/b_f5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="b_f5"
                android:text="@string/b_f5" />

